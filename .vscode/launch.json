  "version": "0.2.0",
  "configurations": [
    {
      "type": "cloudcode.kubernetes",
      "language": "Node",
      "request": "attach",
      "debugPort": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "name": "Attach App on Kubernetes Cluster: NodeJS",
      "podSelector": {
        "app": "my-app"
      }
    }
  ]
}
